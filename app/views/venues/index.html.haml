%head
  %meta{:name => 'viewport', :content => 'minimal-ui,width=device-width, initial-scale=1, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no'}
  :javascript
      $(function() {
        ko.applyBindings(new VenueListViewModel());
      });

%body.venue-list
  .venues-list-section
    .view-header
      Venues
    %span{'data-bind' => 'visible:isLoading', :class => 'loading'}
      LOADING ...

    -#%a{'data-bind' => 'click: toggleVisible'}
    -#  click this to show or hide Jojo's thing
    -#
    -#%span{'data-bind' => 'slideVisible: isShowingAdd, click: toggleVisible'}
    -#  This is Jojo's special thing.



    .list-group{'data-bind' => 'foreach: venueArray'}
      .r-sm-h.list-group-item{'data-bind' => 'text: name'}
      .r-l-h.list-group-item
        .thumb.pull-left{'data-bind' => 'text: name[0]'}
          N
        .cnt
          .list-group-item-heading{'data-bind' => 'text: name'}
          .list-group-item-text
            .description{'data-bind' => 'text:description'}
            .address{'data-bind' => 'text:address'}


  .venues-add-section
    .view-header
      Add venue
    .input-group
      %form{'data-bind' => 'submit: addVenue'}
        %input.form-control{'data-bind' => 'value: newVenue', :type => 'text', :placeholder => 'venue name'}
        %input.form-control{'data-bind' => 'value: newDesptn', :type => 'text', :placeholder => 'venue description'}
        %input.form-control{'data-bind' => 'value: newAddress', :type => 'text', :placeholder => 'venue address'}
        %button{:type => 'submit'}
          Add

