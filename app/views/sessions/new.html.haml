%head
  %meta{:name => 'viewport', :content => 'minimal-ui,width=device-width, initial-scale=1, maximum-scale=1.0, minimum-scale=1.0, user-scalable=no'}

%body.login
  .thing
    =image_tag 'hungry.png', class: 'logo'
    %p.welcome-msg
      To choose what you want for
      %span.highlighted
        Friday lunch
      we first want you to tell us who you are. Use your TW short username to log in.
    %center
      %form{action: '/sessions', method: 'POST'}
        %input{type: 'hidden', name: 'authenticity_token', value: form_authenticity_token}
        %input.username{type: 'text', name:'shortname', placeholder: "(e.g. 'joli')", size: 10}
        %input.submit{type: 'submit', value: 'login'}
